    <script>
        $(document).ready(function() {
            var table = $('#patrones-table').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.1/i18n/es_es.json"
                }
            });

            $('.filter-button').on('click', function() {
                $('.filter-form').toggle();
            });

            $('#advanced-search').on('change', function() {
                $('#advanced-search-options').toggle();
            });

            $('.filter-form').on('submit', function(e) {
                e.preventDefault();
                var codigo = $('[name="filter-codigo"]').val().trim();
                var nombre = $('[name="filter-nombre"]').val().trim();
                var grosor = $('[name="filter-thickness"]').val().trim();
                var grosorMax = $('[name="filter-thickness-max"]').val().trim();
                var ancho = $('[name="filter-width"]').val().trim();
                var anchoMax = $('[name="filter-width-max"]').val().trim();
                var largo = $('[name="filter-length"]').val().trim();
                var largoMax = $('[name="filter-length-max"]').val().trim();
                var clase = $('[name="filter-clase"]').val().trim();
                var patron = $('[name="filter-patron"]').val().trim();
                var cantidad = $('[name="filter-amount"]').val().trim();
                var fecha = $('[name="filter-date"]').val().trim();
                var fechaMax = $('[name="filter-date-max"]').val().trim();

                table.columns().every(function() {
                    var column = this;
                    var columnIndex = column[0][0];

                    if (columnIndex === 0 && codigo !== '') {
                        column.search(codigo);
                    } else if (columnIndex === 1 && nombre !== '') {
                        column.search(nombre);
                    } else if (columnIndex === 2 && (grosor !== '' || grosorMax !== '')) {
                        column.search(grosor + '-' + grosorMax, true, false);
                    } else if (columnIndex === 3 && (ancho !== '' || anchoMax !== '')) {
                        column.search(ancho + '-' + anchoMax, true, false);
                    } else if (columnIndex === 4 && (largo !== '' || largoMax !== '')) {
                        column.search(largo + '-' + largoMax, true, false);
                    } else if (columnIndex === 5 && clase !== '') {
                        column.search(clase);
                    } else if (columnIndex === 6 && patron !== '') {
                        column.search(patron);
                    } else if (columnIndex === 7 && cantidad !== '') {
                        column.search(cantidad);
                    } else if (columnIndex === 8 && (fecha !== '' || fechaMax !== '')) {
                        column.search(fecha + '-' + fechaMax, true, false);
                    }
                });

                table.draw();
            });

            $('.clear-filter-button').on('click', function() {
                $('.filter-form').trigger('reset');
                table.search('').columns().search('').draw();
            });
        });

        function openPopup(codigo, bodega, empresa, descripcion) {
            // Abrir el popup y mostrar los detalles
        }
    </script>
</body>
